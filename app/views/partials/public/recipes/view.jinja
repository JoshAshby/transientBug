<div class="recipe">
  <div class="row">
    <div class="col-md-12">
      <div class="recipe-header">
        <h1>{{recipe.title}}</h1>
        <small><b>By</b> {{ recipe.user.username if recipe.user.id!=req.session.id else 'You!'}} - {{recipe.created.humanize()}}{% if req.session.id %} | <b>Visibility:</b> {{ 'Public' if recipe.public else 'Private' }}{% endif %}</small>
        <p>{{recipe.description}}</p>
        {% if recipe.tags %}
          <b>Tags: </b>
          {% for tag in recipe.tags %}
            <a href="/recipes/search?s=tags:{{tag}}"><span class="label label-purple">{{tag}}</span></a>
          {% endfor %}
          <br>
        {% endif %}
        {% if recipe.country %}
          <b>Country: </b> {{recipe.country}} <br>
        {% endif %}
      </div>
      <div class="recipe-ingredients">

      </div>
      <div class="recipe-steps">

      </div>
    </div>
  </div>
</div>
