<!doctype html>
<html>
  <head>
  <title>transientBug - {{title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    <link href="/static/css/cyti/cyti.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

    <!-- Begin page stylsheets -->
    <link href="/static/css/themes/{{theme_color}}.css" rel="stylesheet">
    <link href="/static/css/sidebars/sidebar.css" rel="stylesheet">
    {% for sheet in stylesheets %}
      <link href="/static/css/{{sheet}}.css" rel="stylesheet">
    {% endfor %}

    <style>
      {{styles}}
    </style>
    <!-- End page style sheets -->
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="fa fa-bars"></span>
        </button>
        <a class="navbar-brand" href="/"><img src="/static/img/bug_logo.png"> transientBug</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
          <li {{ 'class="active"' if nav=="phots" }}><a href="/phots"><i class="fa fa-picture-o"></i> Phots</a></li>
          <li {{ 'class="active"' if nav=="notes" }}><a href="/notes"><i class="fa fa-file-text"></i> Notes</a></li>

          {% if req.session.has_screenshots %}
            <li {{ 'class="active"' if nav=="screenshots" }}><a href="/screenshots"><i class="fa fa-desktop"></i> Scrns</a></li>
          {% endif %}

        </ul>
        {% if req.session.id %}
          <ul class="nav navbar-nav navbar-right" style="margin-right: 15px">
            <li class="dropdown {{ 'active' if nav=="admin" }}">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Heya, {{req.session.username}} <i class="fa fa-caret-down"></i></a>
              <ul class="dropdown-menu">

                {% if req.session.has_admin %}
                  <li><a href="/admin"><i class="fa fa-cogs"></i> Admin</a></li>
                  <li><a href="/account"><i class="fa fa-cog"></i> Settings</a></li>
                  <li class="divider"></li>
                {% endif %}
                <li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
              </ul>
            </li>
          </ul>
        {% else %}
          <ul class="nav navbar-nav navbar-right" style="margin-right: 15px">
            <li><a id="nav_extra_menu_btn" href="#" data-html="true" data-content='<form role="logic" action="/login" method="POST"><div class="form-group"><input type="text" class="form-control" placeholder="Username..." name="username"></div><div class="form-group"><input type="password" class="form-control" placeholder="Password..." name="password"></div><input type="hidden" name="return-to" value="{{req.url.path}}" /><button type="submit" class="btn btn-default btn-primary btn-block">Login</button></form>' data-container="body" data-title="Login" data-placement="bottom">Heya, stranger <i class="fa fa-chevron-down"></i></a>
            </li>
          </ul>
        {% endif %}
      </div><!-- /.navbar-collapse -->
    </nav>

    <div id="wrapper">
      <div id="sidebar-wrapper" class="col-sm-2">
        <div id="sidebar">
          <ul class="nav list-group">
            <li><a href="#" id="hide"><i class="fa fa-chevron-left fa-fw"></i> Hide sidebar</a></li>
          </ul>
          {{sidebar}}
        </div>
      </div>
      <div id="main-wrapper" class="col-sm-10 pull-right">

        <div id="main">
          <div class="row" style="display: none">
            <div class="col-sm-12">
              <a href="#" id="show" class="btn btn-default btn-sm">Show sidebar <i class="fa fa-chevron-right fa-fw"></i></a>
            </div>
          </div>

          {% if req.has_announcements and not hide_announcements %}
            <div class="alert alert-danger">
              <div class="row">
                <div class="col-md-1 col-sm-1" style="text-align: center;">
                  <i class="fa fa-exclamation fa-2x"></i>
                </div>
                <div class="col-md-10 col-sm-10">
                  {% for announcement in req.announcements %}
                    {{announcement}}
                  {% endfor %}
                </div>
              </div>
            </div>
          {% endif %}

          {% if req.session.alerts %}
            <!-- Begin alerts section -->
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                {{req.session.alerts}}
              </div>
            </div>
            <!-- End alerts section -->
          {% endif %}

          {% if breadcrumbs_top and not breadcrumbs %}
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <ol class="breadcrumb">
                  {% set breadcrumb_parts = "" %}
                  {% for bit in req.pre_id_url %}
                    {% set breadcrumb_parts = breadcrumb_parts+"/"+bit %}
                    {% if loop.last and not req.command and not req.id %}
                      <li class="active">{{bit|capitalize}}</li>
                    {% elif loop.last and req.id and not req.command %}
                      <li><a href="{{breadcrumb_parts}}">{{bit|capitalize}}</a></li>
                      <li class="active">{{req.id|truncate(10, True)}}</li>
                    {% elif loop.last and req.command %}
                      <li><a href="{{breadcrumb_parts}}">{{bit|capitalize}}</a></li>
                      <li><a href="{{breadcrumb_parts}}/{{req.id}}">{{req.id|truncate(10, True)}}</a></li>
                      <li class="active">{{req.command|capitalize}}</li>
                    {% else %}
                      <li><a href="{{breadcrumb_parts}}">{{bit|capitalize}}</a></li>
                    {% endif %}
                  {% endfor %}
                </ol>
              </div>
            </div>
          {% endif %}

          {{body}}

          {% if breadcrumbs and not breadcrumbs_top %}
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <ol class="breadcrumb">
                  {% set breadcrumb_parts = "" %}
                  {% for bit in req.pre_id_url %}
                    {% set breadcrumb_parts = breadcrumb_parts+"/"+bit %}
                    {% if loop.last and not req.command and not req.id %}
                      <li class="active">{{bit|capitalize}}</li>
                    {% elif loop.last and req.id and not req.command %}
                      <li><a href="{{breadcrumb_parts}}">{{bit|capitalize}}</a></li>
                      <li class="active">{{req.id|truncate(10, True)}}</li>
                    {% elif loop.last and req.command %}
                      <li><a href="{{breadcrumb_parts}}">{{bit|capitalize}}</a></li>
                      <li><a href="{{breadcrumb_parts}}/{{req.id}}">{{req.id|truncate(10, True)}}</a></li>
                      <li class="active">{{req.command|capitalize}}</li>
                    {% else %}
                      <li><a href="{{breadcrumb_parts}}">{{bit|capitalize}}</a></li>
                    {% endif %}
                  {% endfor %}
                </ol>
              </div>
            </div>
          {% endif %}

        </div>
      </div>
      <div class="col-sm-12 footer">
        <ul class="list-inline">
          <li><a href="http://github.com/transientBug">transientBug - transientBug.com 2014</a></li>
          <li><a rel="license" href="https://creativecommons.org/licenses/by-nc-sa/3.0/"><img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by-nc-sa/3.0/80x15.png" /></a></li>

          <li class="pull-right"><a href="/about">About</a></li>

        </ul>
      </div>
    </div>

    <script src="/static/js/lib/lazyload.js"></script>
    <script src="//code.jquery.com/jquery.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>

    <!-- Begin page scripts -->
    <script src="/static/js/sidebar.js"></script>
    {% for script in scriptFiles %}
      <script src="/static/js/{{script}}.js"></script>
    {% endfor %}

    <script>
      {{scripts}}
    </script>
    <!-- End page scripts -->
    <br>
  </body>
</html>
