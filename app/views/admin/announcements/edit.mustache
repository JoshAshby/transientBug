+++
base: skeletons/sidebar
theme_color: orange

nav: admin_annoucements
breadcrumbs_top: True

scriptFiles:
  - transientbug/admin/announcement
+++

<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <div class="thumbnail">
      <div class="caption">
        <form method="POST">
          <fieldset>
            <legend>Edit Announcement...
            <small class="pull-right">T'would be {{now}}</small></legend>
            <div class="form-group">
              <div class="row">
                <div class="col-md-6">
                  <div class='input-group date datetimepicker'>
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type='text' class="form-control" name="start" placeholder="{{now}}" value="{{announcement._formated_start}}" />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class='input-group date datetimepicker'>
                    <input type='text' class="form-control" name="end" placeholder="{{now}}" value="{{announcement._formated_end}}" />
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <textarea rows="5" class="form-control" name="message" placeholder="Announcement..." data-provide="markdown">{{announcement.message}}</textarea>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" name="status" value="true" {{#announcement.status}}checked{{/announcement.status}}/> Make this announcement active?
              </label>
            </div>            <button class="btn btn-orange btn-block" type="submit">Update</button>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
