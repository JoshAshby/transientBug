+++
base: skeletons/sidebar
theme_color: orange
nav: admin_invites
breadcrumbs_top: True
+++

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Quick Add Invite</h3>
      </div>
      <div class="panel-body">
        <form method="POST" action="/admin/invites">
          <div class="input-group">
            <input class="form-control" type="email" name="email" placeholder="Email to invite...">
            <div class="input-group-btn">
              <button type="submit" class="btn btn-theme">Send Invite <i class="fa fa-check"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Email</th>
          <th>Code</th>
          <th>Requested On</th>
          <th>Status</th>
        </thead>
        <tbody>
          {% for invite in page.pail %}
            <tr>
              <td>{{invite.email}}</td>
              <td>{{invite.short_code}}</td>
              <td>{{invite.created.humanize()}}</td>
              <td>
                {% if invite.user %}
                  <a href="/admin/users/{{invite.user.id}}">{{invite.user.username}}</a>
                {% else %}
                  Pending <button class="btn btn-orange btn-sm">Resend</button>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>Oh fancy...</h1>
        <p>No one has been invited!</p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
