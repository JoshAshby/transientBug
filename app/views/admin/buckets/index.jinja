+++
base: skeletons/sidebar
theme_color: orange

nav: admin_buckets
breadcrumbs_top: True

scriptFiles:
  - admin/buckets/bucket
+++

<div class="row">
  <div class="col-md-4 col-md-offset-2 col-sm-12">
  </div>
  <div class="col-sm-12 col-md-4">
    <form class="form-inline pull-right" role="pagination_options">
      {{page.options}}
    </form>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    {% for item in page.pail %}
      <div class="row">
        <div class="col-md-9">
          <h4>{{item.id}} <small>{{item.name}}</small></h4>
        </div>
        <div class="col-md-3">
          <div class="pull-right">
            <input type="checkbox" data-id="{{item.id}}" data-on="orange" {{ 'checked' if item.status }}/>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          {{item.description}}
        </div>
      </div>
      <hr>
    {% endfor %}

    {{page.pager}}
  </div>
</div>
