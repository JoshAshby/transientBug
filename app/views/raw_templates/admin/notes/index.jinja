nav: admin_notes
breadcrumbs_top: True
base: skeletons/sidebar
+++

{% set public = req.get_param("public", "public") %}
{% set draft = req.get_param("draft", "published") %}
{% set disabled = req.get_param("disable", "enabled") %}
{% set reported = req.get_param("reported", False, bool) %}
{% set sort_by = req.get_param("sort_by", "created") %}

<form class="form-inline" role="pagination_options">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <fieldset>
        <div class="well">
          <div class="form-group">
            <label for="public">Public: </label>
            <select class="form-control">
              <option value="public">Public</option>
              <option value="private" {{ 'selected' if public!="public" }}>Private</option>
            </select>
          </div>
          <br>
        </div>
      </fieldset>
    </div>
    <div class="col-sm-12 col-md-6">
      {% if page.pail %}
        <fieldset class="pull-right">
          {{page.options}}
        </fieldset>
      {% endif %}
    </div>
  </div>
</form>

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Author</th>
          <th>Created</th>
          <th>Visibility</th>
        </thead>
        <tbody>
          {% for note in page.pail %}
            <tr {{ 'class="danger"' if note.disable }}>
              <td></td>
              <td><a href="/notes/{{note.short_code}}">{{note.title|truncate(25)}}</a></td>
              <td><a href="/admin/users/{{note.author.id}}">{{note.author.username}}</a></td>
              <td>{{note.formated_time}}</td>
              <td>
                {% if note.public %}
                  <i class="fa fa-eye"></i>
                {% else %}
                  <i class="fa fa-eye-slash"></i>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="row">
        <div class="col-md-12">
          <div class="jumbotron">
            <h1>No notes!</h1>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
