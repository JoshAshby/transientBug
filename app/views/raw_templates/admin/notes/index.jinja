+++
theme_color: orange
nav: admin_notes
breadcrumbs_top: True
base: skeletons/sidebar
+++

<div class="row">
  <div class="col-md-6 col-sm-12">
    <ul class="nav nav-pills" id="myTab">
      <li {{ 'class="active"' if req.id!="enabled" }}><a href="/admin/notes">Disabled</a></li>
      <li {{ 'class="active"' if req.id=="enabled" }}><a href="/admin/notes/enabled">Enabled</a></li>
    </ul>
  </div>
  {% if page.pail %}
    <div class="col-sm-12 col-md-6">
      <form class="form-inline pull-right" role="pagination_options">
        <div class="form-group">
          <label class="sr-only" for="filter">Filter</label>
          <select name="filter" class="input-sm form-control">
            <option value=all {{ 'selected="selected"' if type=="all" }}>All</option>
            <option value=private {{ 'selected="selected"' if type=="private" }}>Private</option>
            <option value=public {{ 'selected="selected"' if type=="public" }}>Public</option>
          </select>
        </div>
        {{page.options}}
      </form>
    </div>
  {% endif %}
</div>
<br>

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Author</th>
          <th>Created</th>
          <th>Visibility</th>
        </thead>
        <tbody>
          {% for note in page.pail %}
            <tr {{ 'class="danger"' if note.disable }}>
              <td></td>
              <td><a href="/notes/{{note.short_code}}">{{note.title|truncate(25)}}</a></td>
              <td><a href="/admin/users/{{note.author.id}}">{{note.author.username}}</a></td>
              <td>{{note.formated_time}}</td>
              <td>
                {% if note.public %}
                  <i class="fa fa-eye"></i>
                {% else %}
                  <i class="fa fa-eye-slash"></i>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="row">
        <div class="col-md-12">
          <div class="jumbotron">
            <h1>No notes!</h1>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
