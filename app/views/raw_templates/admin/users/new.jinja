+++
theme_color: orange
nav: admin_users
breadcrumbs_top: True
base: skeletons/sidebar
scriptFiles:
 - transientbug/admin/user
+++
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form role="form" method="POST">
      <div class="form-group {{ 'has-error' if error=="username" }}">
        <label for="email">Username</label>
        <input type="text" class="form-control" id="username" placeholder="Username..." name="username" value="{{username}}">
        {% if error=="username" %}
          <span class="help-text">
            {{error_msg}}
          </span>
        {% endif %}
      </div>
      <div class="form-group {{ 'has-error' if error=="email" }}">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="Email..." name="email" value="{{email}}">
        {% if error=="email" %}
          <span class="help-text">
            {{error_msg}}
          </span>
        {% endif %}
      </div>
      <div class="form-group {{ 'has-error' if error=="password" }}">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password..." name="password" value="{{password}}">
        {% if error=="password" %}
          <span class="help-text">
            {{error_msg}}
          </span>
        {% endif %}
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="disable" value="true"> Disable account?
        </label>
      </div>
      <fieldset>
        <div class="form-group" id="groups">
          <label for="groups">Groups</label>
          <div class="input-group">
            <input class="form-control input-sm" name="groups" type="text" placeholder="Group..." />
            <span class="input-group-btn">
              <button class="btn btn-default btn-sm"><i class="fa fa-times"></i></button>
            </span>
          </div>
          <br>
        </div>
        <div class="form-group">
          <button class="btn btn-default btn-sm" id="add_group"><i class="fa fa-plus"></i></button>
        </div>
      </fieldset>
      <button type="submit" class="btn btn-theme btn-sm pull-right">Create</button>
    </form>
  </div>
</div>
