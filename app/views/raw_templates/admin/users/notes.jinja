+++
theme_color: orange
nav: admin_users
breadcrumbs_top: True
base: skeletons/sidebar
+++
{{tabs}}
<div class="row">
  <div class="col-md-12">
    <form class="form-inline pull-right" role="pagination_options">
      <div class="form-group">
        <label class="sr-only" for="filter">Filter</label>
        <select name="filter" class="input-sm form-control">
          <option value=all {{ 'selected="selected"' if type=="all" }}>All</option>
          <option value=private {{ 'selected="selected"' if type=="private" }}>Private</option>
          <option value=public {{ 'selected="selected"' if type=="public" }}>Public</option>
        </select>
      </div>
      {{page.options}}
    </form>
    <br>
    <br>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Created</th>
        <th>Visibility</th>
        <th>Status</th>
      </thead>
      <tbody>
        {% for note in page.pail %}
          <tr {{ 'class="danger"' if note.disable }}>
            <td></td>
            <td><a href="/admin/notes/{{note.short_code}}">{{note.title|truncate(25)}}</a></td>
            <td>{{note.formated_created}}</td>
            <td></td>
            <td></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
