+++
theme_color: orange

nav:
  admin_buckets: true
+++

<ol class="breadcrumb">
  <li><a href="/admin">Admin</a></li>
  <li class="active">Buckets</li>
</ol>

<div class="row">
  <div class="col-md-4 col-md-offset-2 col-sm-12">
  </div>
  <div class="col-sm-12 col-md-4">
    <form class="form-inline pull-right" role="pagination_options">
      <div class="form-group">
        <label class="sr-only" for="perpage">Perpage</label>
        <select id="perpage" name="perpage" class="input-sm">
          {{#page.perpage}}<option value={{page.perpage}}>{{page.perpage}}</option>{{/page.perpage}}
          <option value=25>25</option>
          <option value=50>50</option>
          <option value=100>100</option>
          <option value=all>All</option>
        </select>
      </div>
      <button type="submit" class="btn btn-theme btn-sm">Update</button>
    </form>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    {{#buckets}}
      <div class="row">
        <div class="col-md-9">
          <h4>{{id}} <small>{{name}}</small></h4>
        </div>
        <div class="col-md-3">
          <div class="btn-group pull-right">
            {{#status}}
              <a href="#" data-id="{{id}}" class="btn btn-theme btn-sm toggle_btn">
                <i class="icon-ok"></i>
              </a>
            {{/status}}
            {{^status}}
              <a href="#" data-id="{{id}}" class="btn btn-default btn-sm toggle_btn">
                <i class="icon-remove"></i>
              </a>
            {{/status}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          {{description}}
        </div>
      </div>
      <hr>
    {{/buckets}}

    {{#page.show}}
      <div class="row">
        <div class="col-md-12">
          <ul class="pager">
            <li class="previous {{^page.hasPrev}}disabled{{/page.hasPrev}}">
              {{#page.hasPrev}}
                <a href="?page={{page.prev}}&perpage={{page.perpage}}"><i class="icon-chevron-left"></i> Prev</a>
              {{/page.hasPrev}}
              {{^page.hasPrev}}
                <a><i class="icon-chevron-left"></i> Prev</a>
              {{/page.hasPrev}}
            </li>
            <li class="next {{^page.hasNext}}disabled{{/page.hasNext}}">
              {{#page.hasNext}}
                <a href="?page={{page.next}}&perpage={{page.perpage}}">Next <i class="icon-chevron-right"></i></a>
              {{/page.hasNext}}
              {{^page.hasNext}}
                <a>Next <i class="icon-chevron-right"></i></a>
              {{/page.hasNext}}
            </li>
          </ul>
        </div>
      </div>
    {{/page.show}}
  </div>
</div>
