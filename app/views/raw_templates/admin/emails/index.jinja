+++
theme_color: orange
nav: admin_email
breadcrumbs_top: True
base: skeletons/sidebar
+++

<div class="row">
  <div class="col-md-12">
    <form class="form-inline pull-right" role="pagination_options">
      {{page.options}}
    </form>
    <br>
    <br>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th></th>
          <th>Subject</th>
          <th>Service</th>
          <th>For</th>
          <th>Sent</th>
        </thead>
        <tbody>
          {% for email in page.pail %}
            <tr>
              <td></td>
              <td><a href="/admin/emails/{{email.id}}">{{email.subject|truncate(50)}}</a></td>
              <td>{{email.service}}</td>
              <td>{{email.who|join(", ")}}</td>
              <td>{{email.formated_created}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>Whoa!</h1>
        <p>The system hasn't had to send any emails yet!<br>
        Move along</p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
