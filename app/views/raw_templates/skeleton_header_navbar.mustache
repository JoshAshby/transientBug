<!doctype html>
<html>
  <head>
  <title>transientBug - {{{req.title}}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/bootswatch/3.0.0/cyborg/bootstrap.min.css" rel="stylesheet">

    <!-- Begin page stylsheets -->
    <link href="/static/css/{{theme_color}}_theme.less.css" rel="stylesheet">
    {{#stylesheets}}
      <link href="/static/css/{{.}}.css" rel="stylesheet">
    {{/stylesheets}}

    <style>
      {{{styles}}}
    </style>
    <!-- End page style sheets -->

    <script src="http://code.jquery.com/jquery.js"></script>
  </head>
  <body>
    {{#req.has_announcements}}
      <div class="container container-alert">
        <div class="row">
          <div class="col-md-1 col-sm-1">
            <i class="icon-exclamation icon-3x"></i>
          </div>
          <div class="col-md-10 col-sm-10">
            {{#req.announcements}}
              {{{.}}}
            {{/req.announcements}}
          </div>
        </div>
      </div>
    {{/req.has_announcements}}
    <div class="container container-full">
      <br>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <nav class="navbar navbar-default navbar-inverse" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/"><i class="icon-bug"></i> transientBug</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
              <ul class="nav navbar-nav">
                <li {{#nav.phots}}class="active"{{/nav.phots}}><a href="/phots"><i class="icon-picture"></i> Phots</a></li>
                <li {{#nav.notes}}class="active"{{/nav.notes}}><a href="/notes"><i class="icon-file-text"></i> Notes</a></li>
                {{#req.session.userID}}
                  <li {{#nav.screenshots}}class="active"{{/nav.screenshots}}><a href="/screenshots"><i class="icon-screenshot"></i> Scrns</a></li>
                {{/req.session.userID}}
              </ul>
              {{#req.session.userID}}
                <ul class="nav navbar-nav navbar-right" style="margin-right: 15px">
                  <li {{#nav.home}}class="active"{{/nav.home}} class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Ello, {{req.session.username}} <i class="icon-chevron-down"></i></a>
                    <ul class="dropdown-menu">
                      {{#req.session.has_root}}
                        <li {{#nav.admin}}class="active"{{/nav.admin}}><a href="/admin"><i class="icon-meh"></i> Admin</a></li>
                        <li class="divider"></li>
                      {{/req.session.has_root}}
                      <li><a href="/logout"><i class="icon-signout"></i> Logout</a></li>
                    </ul>
                  </li>
                </ul>
              {{/req.session.userID}}
              {{^req.session.userID}}
                <ul class="nav navbar-nav navbar-right" style="margin-right: 15px">
                  <li class="active"><a id="signin_btn" href="#" data-html="true" data-content='<form role="logic" action="/login" method="POST"><div class="form-group"><input type="text" class="form-control" placeholder="Username..." name="username"></div><div class="form-group"><input type="password" class="form-control" placeholder="Password..." name="password"></div><button type="submit" class="btn btn-default btn-theme btn-block">Login</button></form>' data-container="body" data-title="Login" data-placement="bottom">Heya, stranger <i class="icon-chevron-down"></i></a>
                  </li>
                </ul>
              {{/req.session.userID}}
            </div><!-- /.navbar-collapse -->
          </nav>
        </div>
      </div>

      <!-- Begin alerts section -->
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          {{{req.session.alerts}}}
        </div>
      </div>
      <!-- End alerts section -->

      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <h1>{{{header}}}</h1>
        </div>
      </div> <!-- /row -->
    </div> <!-- /container full -->

    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          {{{body}}}
        </div>
      </div>

      <hr>
      <footer id="footer">
        <div class="row">
          <div class="col-md-6">
            transientBug.com by <a href="https://github.com/JoshAshby">transientBug 2013</a>
            <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by-nc-sa/3.0/88x31.png" /></a><br />This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/">Creative Commons Attribution-NonCommercial-ShareAlike 3.0 Unported License</a>.
          </div>
          <div class="col-md-6">
            <p class="pull-right"><a href="/about">About</a> | <a href="#top">Back to top</a></p>
          </div>
        </div>
      </footer>
    </div>

    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>

    <!-- Begin page scripts -->
    {{#scriptFiles}}
      <script src="/static/js/{{.}}.js"></script>
    {{/scriptFiles}}

    <script>
      {{^req.session.userID}}
        $(function() {
          $("#signin_btn").popover();
          console.log("twat")
        });
      {{/req.session.userID}}

      {{#scripts}}
        {{{scripts}}}
      {{/scripts}}
    </script>
    <!-- End page scripts -->
    <br>
  </body>
</html>
