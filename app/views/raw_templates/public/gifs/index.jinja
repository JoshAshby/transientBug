+++
nav:
  phots: true

scripts: "
      $('.thumbnail_h6').tooltip();
  "
+++

<div class="row">
  {% if not single %}
    {% if req.session.has_phots %}
      <div class="col-md-5 col-sm-12">
        <form method="GET" action="/phots/tags" class="form-inline">

          <div class="input-group">
            <span class="input-group-btn">
              <a href="/phots/new" class="btn btn-theme btn-sm">Add</a>
            </span>
            <input type="text" class="form-control input-sm" name="q" value="{{q}}" placeholder="Search Tags...">
            <span class="input-group-btn">
              <button class="btn btn-theme btn-sm" type="submit"><i class="icon-search"></i></button>
            </span>
          </div>

        </form>
      </div>
    {% else %}
      <div class="col-md-5 col-sm-12">
        <form method="GET" class="form-inline">

          <div class="input-group">
            <input type="text" class="form-control input-sm" name="q" value="{{q}}" placeholder="Search Tags...">
            <span class="input-group-btn">
              <button class="btn btn-theme btn-sm" type="submit"><i class="icon-search"></i></button>
            </span>
          </div>

        </form>
      </div>
    {% endif %}
  {% else %}
    {% if req.session.has_phots %}
      <div class="col-md-5 col-sm-12">
        <a href="/phots/new" class="btn btn-theme btn-sm">Add</a>
      </div>
    {% else %}
      <div class="col-md-5 col-sm-12">
      </div>
    {% endif %}
  {% endif %}
  <div class="col-sm-12 col-md-7">
    <form class="form-inline pull-right" role="pagination_options">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-default btn-sm {{ 'active' if v=="cards" }}">
          <input type="radio" name="v" value="cards" {{ 'checked' if v=="cards" }}/><i class="icon-th"></i>
        </label>
        <label class="btn btn-default btn-sm {{ 'active' if v=="list" }}">
          <input type="radio" name="v" value="list" {{ 'checked' if v=="list" }}/><i class="icon-list"></i>
        </label>
        <label class="btn btn-default btn-sm {{ 'active' if v=="links" }}">
          <input type="radio" name="v" value="links" {{ 'checked' if v=="links" }}/><i class="icon-link"></i>
        </label>
      </div>
      <div class="form-group">
        <label class="sr-only" for="filter">Filter</label>
        <select id="filer" name="filter"class="input-sm">
          <option value=all {{ 'selected="selected"' if filter=="all" }}>all</option>
          <option value=gif {{ 'selected="selected"' if filter=="gif" }}>gif</option>
          <option value=jpg {{ 'selected="selected"' if filter=="jpg" }}>jpg</option>
          <option value=png {{ 'selected="selected"' if filter=="png" }}>png</option>
          <option value=tiff {{ 'selected="selected"' if filter=="tiff" }}>tiff</option>
        </select>
      </div>
      <div class="form-group">
        <label class="sr-only" for="dir">Sort</label>
        <select id="dir" name="dir"class="input-sm">
          <option value=desc {{ 'selected="selected"' if page.direction=="desc" }}>desc</option>
          <option value=asc {{ 'selected="selected"' if page.direction=="asc" }}>asc</option>
        </select>
      </div>
      <div class="form-group">
        <label class="sr-only" for="perpage">Perpage</label>
        <select id="perpage" name="perpage" class="input-sm">
          <option value=24 {{ 'selected="selected"' if perpage=="24" }}>24</option>
          <option value=48 {{ 'selected="selected"' if perpage=="48" }}>48</option>
          <option value=all {{ 'selected="selected"' if perpage=="all" }}>All</option>
        </select>
      </div>
      <button type="submit" class="btn btn-theme btn-sm">Update</button>
    </form>
  </div>
</div>
<br>

{% if tags %}
  <div class="row">
    <div class="col-md-4">
      <h4>Searched tags:</h4>
    </div>
    <div class="col-md-8">
      {% for tag in tags %}
        <a href="/phots/tags/{{tag}}"><span class="label label-theme">{{tag}}</span></a> 
      {% endfor %}
    </div>
  </div>
  <hr>
{% endif %}
{% if tag %}
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <h4>
        Displaying phots within tag:
        <a href="/phots/tags/{{tag}}"><span class="label label-theme">{{tag}}</span></a>
      </h4>
    </div>
    <div class="col-md-6 col-sm-12">
      <a class="pull-right" href="/phots/tags"><i class="icon-level-up"></i> View all tags</a>
    </div>
  </div>
  <br>
{% endif %}

<div class="row">
  {% if v=="cards" %}
    {% for pic in pictures %}
      <div class="col-sm-6 col-md-4" style="margin-bottom: 20px;">
        <div class="thumbnail">
          <a href="/i/{{pic.filename}}" class="thumbnail"><img src="/i/{{pic.filename}}" style="height: 200px" alt="{{pic.filename}}"></a>
          <div class="caption">
            <div class="row">
              <div class="col-md-8">
                <a href="/i/{{pic.filename}}"><h6 class="thumbnail_h6" data-toggle="tooltip" title="{{pic.title}}">{{pic.title}}</h6></a>
              </div>
              <div class="col-md-4">
                <a href="/phots/view/{{pic.filename}}" class="btn btn-theme btn-sm pull-right">Page</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  {% elif v=="links" %}
    <div class="col-md-12">
      {% for pic in pictures %}
        <ul class="list-unstyled">
          <li>
            <a href="/phots/view/{{pic.filename}}" class="btn btn-theme btn-xs">Page</a> <a href="/i/{{pic.filename}}">{{pic.filename}}</a>
            {% if pic.tags %}
              {% for tag in pic.tags %}
                <a href="/phots/{{ tag }}">
                  <span class="label label-theme"></span>
                </a>
              {% endfor %}
            {% endif %}
          </li>
        </ul>
      {% endfor %}
    </div>
  {% elif v=="list" %}
    {% for pic in pictures %}
      <div class="col-md-6 col-sm-12" style="margin-bottom: 20px;">
        <div class="media">
          <a class="pull-left" href="#">
            <img class="media-object" src="/i/{{pic.filename}}" alt="{{pic.title}}" height="64px" width="64px">
          </a>
          <div class="media-body">
            <a href="/i/{{pic.filename}}"><h4 class="media-heading">{{pic.title}}</h4></a>
            <a href="/phots/view/{{pic.filename}}" class="btn btn-theme btn-xs">Page</a> Tags:
            {% if pic.tags %}
              {% for tag in pic.tags[:3] %}
                <a href="/phots/{{tag}}"><span class="label label-theme"></span></a> 
              {% endfor %}
            {% else %}
              No Tags...
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  {% endif %}
</div>

{{pager}}
