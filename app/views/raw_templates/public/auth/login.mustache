+++
base: skeleton_empty
styles: "@import url(http://fonts.googleapis.com/css?family=Maven+Pro:700);

      html,body {
        height:100%;
      }

      .container-full h1 {
        font-size:80px;
      }

      /* Custom container */
      .container-full {
        margin: 0 auto;
        width: 100%;
        min-height:100%;
        overflow:hidden;
      }

      .v-center {
        margin-top:7%;
      }

      .popover-title, .popover-content {
        color: black;
      }"
+++
    <div class="container-full">
      <div class="row">
        <div class="col-lg-12 text-center v-center">
          <h1>Hello There</h1>
          <p class="lead">transientBug.com requires you to be logged in... <a href="#about">What is transientBug?</a></p>
          <br><br>
          {{^banError}}
          <form class="col-md-4 col-md-offset-4" action="/login" method="POST">
            <input type="text" class="form-control input-lg" placeholder="Username..." name="username" id="username" required autofocus data-content="The username you provided could not be found, are you sure it's correct?" data-title="Oh no!" value="{{username}}"><br>
            <input type="password" class="form-control input-lg" placeholder="Password..." name="password" id="password" required data-content="The password you supplied did not match the one for this account. Are you sure you typed it in correctly?" data-title="Uh oh...">
            <hr>
            <button class="btn btn-lg btn-success btn-block" type="submit">Login</button>
          </form>
          {{/banError}}
          {{#banError}}
          <h2>We have a problem <i class="icon-meh"></i></h2>
          <p>You're account is currently disabled. Please wait to be contacted by transientBug.com via email before trying to log in again.</p>
          {{/banError}}
        </div>
      </div> <!-- /row -->
      <br><br><br><br>
    </div> <!-- /container full -->

    <div class="container">

      {{{about}}}

      <hr>
      <footer id="footer">
        <div class="row">
          <div class="col-md-6">
            transientBug.com by <a href="https://github.com/JoshAshby">transientBug 2013</a>
            <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by-nc-sa/3.0/88x31.png" /></a><br />This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/">Creative Commons Attribution-NonCommercial-ShareAlike 3.0 Unported License</a>.
          </div>
          <div class="col-md-6">
            <p class="pull-right"><a href="#top">Back to top</a></p>
          </div>
        </div>
      </footer>
    </div>
