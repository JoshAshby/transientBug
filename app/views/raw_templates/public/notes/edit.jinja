+++
base: skeletons/navbar
theme_color: red
nav: notes

scriptFiles:
  - pillbox
  - lib/typeahead.min
  - lib/bootstrap-markdown
  - transientbug/note

stylesheets:
  - pillbox
  - lib/bootstrap-markdown.min
+++

<ul class="nav nav-pills">
  <li class="active"><a href="#view" data-toggle="tab">View</a></li>
  <li><a href="#edit" data-toggle="tab">Edit</a></li>
</ul>
<br>
<div class="tab-content">
  <div class="tab-pane active" id="view">
    <div class="row">
      <div class="col-md-6">
        <h1>{{note.title}}</h1>
      </div>
      <div class="col-md-6">
        <div class="well">
          <b>By</b> {{ note.author.username if note.author.id!=req.session.id else 'You!'}} - {{note.formated_time}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        {{note.formated_contents}}
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12">
        <b>Tags: </b>
        {% for tag in note.tags %}
          <a href="/notes/tags/{{tag}}"><span class="label label-red">{{tag}}</span></a>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="tab-pane" id="edit">
    <div class="row">
      <div class="col-md-12">
        {{note_edit}}
      </div>
    </div>
  </div>
</div>
