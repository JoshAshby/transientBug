+++
theme_color: red

nav: notes
+++

<div class="row">
  <div class="col-md-4 col-md-offset-3">

    <form method="GET" action="/notes/search" class="form-inline">
      <div class="form-group">
        <div class="input-group input-group-sm typeahead">
          <input type="text" class="form-control" name="s" id="q" value="" placeholder="Search...">
          <span class="input-group-btn">
            <button class="btn btn-red btn-sm" type="submit"><i class="fa fa-search"></i></button>
          </span>
        </div>
      </div>
    </form>

  </div>
</div>


{% if page.pail %}
  ![[partials/public/notes/list]]
{% else %}
  <div class="jumbotron">
    <h1>No Notes :/</h1>
    {% if req.session.has_notes %}
    <a href="/new/note" class="btn btn-red">New</a> or <a href="/notes/yours">Your notes</a>
    {% endif %}
  </div>
{% endif %}
