<div class="row">
  <div class="col-sm-12 col-md-8 col-md-offset-2">

    <div class="panel panel-purple">
      <div class="panel-heading">
        <h3 class="panel-title">New Recipe</h3>
      </div>
      <div class="panel-body">
        <form method="POST" action="/recipes/new" id="new-recipe">
          <fieldset>
<!--            <legend>Basic info</legend>  -->
            <div class="form-group">
              <input type="text" class="form-control" id="recipe-name" name="title" placeholder="Recipe Title..." required>
            </div>
            <div class="form-group">
              <input type="text" id="recipe-tags" name="tags">
            </div>
          </fieldset>
          <hr>
          <fieldset>
<!--            <legend>Ingredients</legend> -->
            <div id="ingredients">
              <div class="input-group">
                <input type="text" class="form-control input-sm" name="ingredients" placeholder="Ingredient..." />
                <span class="input-group-btn hide">
                  <button class="btn btn-default btn-sm"><i class="fa fa-times"></i></button>
                </span>
              </div>
              <br>
            </div>
            <button class="btn btn-default" id="add-ingredient"><i class="fa fa-plus"></i></button>
          </fieldset>
          <hr>
          <fieldset>
<!--            <legend>Steps/Process</legend> -->
            <div id="steps">
              <div class="form-group">
                <label for="step-0">Step 0</label>
                <div class="row">
                  <div class="col-md-11">
                    <textarea class="form-control step" name="steps" data-order="0" rows=5></textarea>
                  </div>
                  <div class="col-md-1">
                    <button class="remove-step btn btn-default hide"><i class="fa fa-times"></i></button>
                  </div>
                </div>
              </div>
              <br>
            </div>
            <button class="btn btn-default" id="add-step"><i class="fa fa-plus"></i></button>
            <br>
          </fieldset>
          <button class="btn btn-purple btn-block" type="submit">Add</button>
        </form>
      </div>
    </div>

  </div>
</div>
