{% if page %}
  ![[partials/public/search/notes_list]]
  ![[partials/public/search/phots_list]]
{% else %}
  <div class="jumbotron">

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <h3><i class="fa fa-search"></i> Search for something else...</h3>

        <form method="GET" class="form-inline">
          <div class="form-group">
            <div class="input-group input-group typeahead">
              <input type="text" class="form-control" name="s" id="s" value="{{ req.get_param("s") }}" placeholder="Search...">
              <span class="input-group-btn">
                <button class="btn btn-blue" type="submit"><i class="fa fa-search"></i></button>
              </span>
            </div>
          </div>
        </form>

      </div>
    </div>

    <p>We couldn't find anything that matched your search for <code>{{ req.get_param("s") }}</code>!</p>
  </div>
{% endif %}
