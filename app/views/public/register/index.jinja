+++
theme_color: green

nav: register
+++

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form role="form" method="POST">
      <div class="row">
        <div class="col-md-12">
          <fieldset>
            <legend>Info</legend>
            <div class="form-group {{ 'has-error' if error=="username" }}">
              <label for="email">Username</label>
              <input type="text" class="form-control" id="username" placeholder="Username..." name="username" value="{{username}}">
              {% if error=="username" %}
                <span class="help-text">
                  {{error_msg}}
                </span>
              {% endif %}
            </div>
            <div class="form-group {{ 'has-error' if error=="email" }}">
              <label for="email">Email address</label>
              <input type="email" class="form-control" id="email" placeholder="Email..." name="email" value="{{email}}">
              {% if error=="email" %}
                <span class="help-text">
                  {{error_msg}}
                </span>
              {% endif %}
            </div>
            <div class="form-group {{ 'has-error' if error=="password" }}">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" placeholder="Password..." name="password" value="{{password}}">
              {% if error=="password" %}
                <span class="help-text">
                  {{error_msg}}
                </span>
              {% endif %}
            </div>
          </fieldset>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <button type="submit" class="btn btn-green btn-sm pull-right">Register</button>
        </div>
      </div>
    </form>
  </div>
</div>


