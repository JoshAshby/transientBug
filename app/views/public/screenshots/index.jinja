+++
base: skeletons/header
theme_color: blue
nav: screenshots

scriptFiles:
 - public/scrns/scrn
+++

<br>
<div class="row">
  <div class="col-sm-12 col-md-6">
    <h4><i class="fa fa-desktop"></i> Screenshots</h4>
  </div>
  <div class="col-sm-12 col-md-6">
    <form class="form-inline pull-right" role="pagination_options">
      {{page.options}}
    </form>
  </div>
</div>
<br>
<div class="row">
  ![[partials/public/screenshot_create]]
</div>
<br>
{% for img in page.pail %}
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="thumbnail">
        <a href="/scrn/{{img}}" class="thumbnail"><img src="/scrn/{{img}}" alt="{{img}}"></a>
        <div class="caption">
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <a href="/scrn/{{img}}"><h6>{{img}}</h6></a>
            </div>
            <div class="col-sm-12 col-md-6">
              <button type="button" class="btn btn-danger btn-sm pull-right del_btn" data-img={{img}}>Delete</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
{% endfor %}

{{page.paginate}}
