+++
nav: phots

scriptFiles:
 - lib/typeahead.min
 - pillbox
 - done_typing
 - check_field
 - public/phots/phots
 - public/phots/phot

stylesheets:
 - pillbox
+++

<div class="row">
  <div class="col-md-6 col-sm-12">
    <form method="GET" action="/phots/search" class="form-inline">

      <div class="input-group input-group-sm typeahead">
        {% if req.session.has_phots %}
          <span class="input-group-btn">
            <a href="/new/phot" class="btn btn-green btn-sm">Add</a>
          </span>
        {% endif %}
        <input type="text" class="form-control" name="s" id="search" placeholder="Search...">
        <span class="input-group-btn">
          <button class="btn btn-green btn-sm" type="submit"><i class="fa fa-search"></i></button>
        </span>
      </div>

    </form>
  </div>
  <div class="col-md-6 col-sm-12">
  </div>
</div>
<br>

<div class="row">
  <div class="col-sm-12 col-md-12">
    <div class="panel panel-{{ 'red' if phot.disable else 'green' }}" id="phot_collection">
      <div class="panel-heading">
        <h3 class="panel-title">{{phot.title}} <a href="/i/{{phot.filename}}"><small>({{phot.filename}})</small></a> <span class="pull-right"> {{ '(DISABLED)' if phot.disable }} </span>  </h3>
      </div>
      <div class="panel-body">
        <div style="text-align: center;">
          <img src="/i/{{phot.filename}}" alt="{{phot.filename}}" class="col-md-12">
        </div>
        <br>
        <b>Added to collection: </b>{{phot.formated_created}}<br>
        {% if phot.url %}
          <b>From: </b>{{phot.url}}<br>
        {% endif %}
        <br>
        {% for tag in phot.tags %}
          <a href="/phots/search?s=tag:{{tag}}"><span class="label label-green">{{tag|replace("_", " ")}}</span></a>
        {% endfor %}
        <br>
        <br>

        {% if req.session.has_phots %}
          <form role="form" method="POST">
            <div class="form-group">
              <label for="name">Rename</label>
              <input type="text" class="form-control" id="phot_name" name="name" value="{{phot.title}}" required>
            </div>
            <div class="form-group">
              <input type="text" name="tags" id="phot_tags" value="{{phot.tags|join(",")}}">
            </div>

            <div class="form-group">
              <label for="disable">
                <input type="checkbox" data-on-text="Yes" data-off-text="No" data-on="red" data-off="green" data-id="{{phot.id}}" name="disable" {{ 'checked' if phot.disable }}/>
                Disabled?
              </label>
          </div>

            <button id="new_phot" type="submit" class="btn btn-green pull-right"><i class="fa fa-check"></i> Update</button>
          </form>
        {% endif %}

      </div>
    </div>
  </div>
</div>
