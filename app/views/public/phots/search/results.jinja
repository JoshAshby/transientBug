nav: phots

scriptFiles:
 - public/phots/phots
+++

{% if phot_page.pail %}
  ![[partials/public/phots/list]]
{% else %}
  <div class="jumbotron">

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <h3><i class="fa fa-search"></i> Search for something else...</h3>

        <form method="GET" action="/phots/search" class="form-inline">
          <div class="form-group">
            <div class="input-group input-group typeahead">
              <input type="text" class="form-control" name="s" id="search" value="{{ req.get_param("s") }}" placeholder="Search...">
              <span class="input-group-btn">
                <button class="btn btn-green" type="submit"><i class="fa fa-search"></i></button>
              </span>
            </div>
          </div>
        </form>

      </div>
    </div>

    <p>We couldn't find any phots that matched your search for <code>{{ req.get_param("s") }}</code>!</p>

    {% if req.session.has_phots %}
      <a href="/new/phot" class="btn btn-green">Add One</a>
    {% endif %}
  </div>

  <div class="row">
    <div class="col-md-12">

      <div class="phots-collection">
        {% if tags %}
          <div class="tags">
            {% for tag in tags %}
              <a href="/phots/search?s=tags:{{tag}}"><span class="label label-green">{{tag|replace("_", " ")}}</span></a>
            {% endfor %}
          </div>
        {% else %}
          <div class="jumbotron">
            <h1>No tags</h1>
            <p>So sad...</p>
          </div>
        {% endif %}
      </div>

    </div>
  </div>
{% endif %}
