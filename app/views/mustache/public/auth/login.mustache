    <div class="container-full">
      <div class="row">
        <div class="col-lg-12 text-center v-center">
          <h1>Hello There</h1>
          <p class="lead">transientBug.com requires you to be logged in...</p>
          <br><br><br>
          <form class="col-md-4 col-md-offset-4" action="/login" method="POST">
            <input type="text" class="form-control input-lg" placeholder="Username..."name="username" required autofocus><br>
            <input type="password" class="form-control input-lg" placeholder="Password..." name="password" required>
            <hr>
            <button class="btn btn-lg btn-primary btn-block" type="button">Login</button>
          </form>
        </div>
      </div> <!-- /row -->
      <br><br><br><br><br><br><br><br><br><br><br><br>
    </div> <!-- /container full -->

    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          {{{body}}}
        </div>
      </div>

      <hr>
      <footer id="footer">
        <div class="row">
          <div class="col-6">
            transientBug.com by transientBug 2013
          </div>
          <div class="col-6">
            <p class="pull-right"><a href="#top">Back to top</a></p>
          </div>
        </div>
      </footer>
    </div>
