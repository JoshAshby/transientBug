+++
styles: "@import url(http://fonts.googleapis.com/css?family=Maven+Pro:700);

      html,body {
        height:100%;
      }

      h1 {
        font-family: 'Maven Pro', sans-serif;
        font-size:80px;
      }

      /* Custom container */
      .container-full {
        margin: 0 auto;
        width: 100%;
        min-height:100%;
        background-color:#2B456E;
        color:#eee;
        overflow:hidden;
      }

      .container-full a {
        text-decoration:none;
      }

      .v-center {
        margin-top:7%;
      }"
