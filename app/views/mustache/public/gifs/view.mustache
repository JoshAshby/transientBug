+++
nav:
  phots: true
+++
{{#req.session.has_phots}}
  <div class="row">
    <div class="col-sm-12 col-md-2">
      <h4><i class="icon-picture"></i> Phots</h4>
    </div>
    <div class="col-sm-12 col-md-4">
      <a href="/phots/new" class="btn btn-theme btn-sm">Add</a>
    </div>
    <div class="col-sm-12 col-md-6">
    </div>
  </div>
{{/req.session.has_phots}}
<br>
<div class="row">
  <div class="col-sm-12 col-md-12">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">{{phot.title}} <small>({{phot.filename}} from {{phot._formated_user}})</small></h3>
      </div>
      <div class="panel-body">
        <div style="text-align: center;">
          <img src="/i/{{{phot.filename}}}" alt="{{phot.filename}}" class="col-md-12">
        </div>
        <br>
        Added to collection on: {{phot._formated_created}} {{#phot.url}}from: {{phot.url}}{{/phot.url}}<br>
        {{#phot.tags}}
          <a href="/phots/tags/{{.}}"><span class="label label-theme">{{.}}</span></a>
        {{/phot.tags}}
        <br>
        <br>

        {{#req.session.has_phots}}
        <form role="form" action="/phots/edit/update/{{{phot.filename}}}" method="POST">
          <div class="form-group">
            <label for="name">Rename</label>
            <input type="text" class="form-control" id="name" name="name" value="{{phot.title}}" required>
            <p class="help-block">All spaces in this name will be replaced with underscores.</p>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="tags" placeholder="Tags..." value="{{phot._formated_tags}}">
          </div>
          <button type="submit" class="btn btn-theme">Submit</button> <button type="button" class="btn btn-danger" id="del_btn" data-img={{{phot.filename}}}>Delete</button>
        </form>
        {{/req.session.has_phots}}

      </div>
    </div>
  </div>
</div>
