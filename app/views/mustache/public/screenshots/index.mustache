+++
nav:
  screenshots: true
+++

<div class="row">
  <div class="col-sm-12 col-md-6">
    <h4><i class="icon-screenshot"></i> Screenshots</h4>
  </div>
  <div class="col-sm-12 col-md-6">
    <form class="form-inline pull-right" role="pagination_options">
      <div class="form-group">
        <label class="sr-only" for="sort">Sort</label>
        <select id="sort" name="sort"class="input-sm">
          {{#page.sort}}<option value={{page.sort}}>{{page.sort}}</option>{{/page.sort}}
          <option value=asc>asc</option>
          <option value=desc>desc</option>
        </select>
      </div>
      <div class="form-group">
        <label class="sr-only" for="perpage">Perpage</label>
        <select id="perpage" name="perpage" class="input-sm">
          {{#page.perpage}}<option value={{page.perpage}}>{{page.perpage}}</option>{{/page.perpage}}
          <option value=5>5</option>
          <option value=10>10</option>
          <option value=20>20</option>
          <option value=50>50</option>
          <option value=all>All</option>
        </select>
      </div>
      <button type="submit" class="btn btn-success btn-sm">Update</button>
    </form>
  </div>
</div>
<br>
{{#pictures}}
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="thumbnail">
        <img src="/scrn/{{{.}}}" alt="{{.}}">
        <div class="caption">
          <h6>{{{.}}}</h6>
          <p>
            <div class="btn-group">
              <button type="button" class="btn btn-success btn-sm">Link</button>
              <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                <i class="icon-chevron-down"></i>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><a href="/scrn/{{{.}}}">Raw link</a></li>
                <li><a href="/screenshots/view/{{{.}}}">Page link</a></li>
              </ul>
            </div>
            <a href="#" class="btn btn-default btn-sm">Edit</a>
          </p>
        </div>
      </div>
    </div>
  </div>
  <br>
{{/pictures}}

{{#page.show}}
  <ul class="pager">
    <li class="previous {{^page.hasPrev}}disabled{{/page.hasPrev}}">
      {{#page.hasPrev}}
        <a href="?page={{page.prev}}&perpage={{page.perpage}}&sort={{page.sort}}"><i class="icon-chevron-left"></i> Prev</a>
      {{/page.hasPrev}}
      {{^page.hasPrev}}
        <a><i class="icon-chevron-left"></i> Prev</a>
      {{/page.hasPrev}}
    </li>
    <li class="next {{^page.hasNext}}disabled{{/page.hasNext}}">
      {{#page.hasNext}}
        <a href="?page={{page.next}}&perpage={{page.perpage}}&sort={{page.sort}}">Next <i class="icon-chevron-right"></i></a>
      {{/page.hasNext}}
      {{^page.hasNext}}
        <a>Next <i class="icon-chevron-left"></i></a>
      {{/page.hasNext}}
    </li>
  </ul>
{{/page.show}}
